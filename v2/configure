# configure -=- set up a build area

set -e

if ! which tclkit >/dev/null 2>&1; then
  echo "cannot find required program: tclkit"
  exit 1
fi

if [ -e src/make.conf ]; then
  mkdir -p build
  cd build
fi

if [ -e Makefile ] && [ Makefile -nt ../src/make.conf ]; then
  echo "build/Makefile is newer than src/make.conf, not overwritten"
else
  cp ../src/make.conf Makefile
  touch -r ../src/make.conf Makefile
fi

touch -c ../noarch/*

cat <<EOF

  Ok.  Now do: cd build && make

EOF

# vim: set ft=sh :
